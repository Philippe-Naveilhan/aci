<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="author" content="Philippe NAVEILHAN">
        <meta name="description" content="{{ seo.sentences ?? '' }}">
        <meta name="keywords" content="{{ seo.words ?? '' }}">
        <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% include 'navbar.html.twig' %}
        {% block body %}{% endblock %}
        {% include 'footer.html.twig' %}
    </body>
    <script>
        var imgMenu = document.getElementById("logo_menu")
        var logoCircle = document.getElementById("logo-circle")
        window.addEventListener('scroll', function(e) {
            if (window.scrollY > 200) {
                if (!imgMenu.className.includes('is-reduce')) {
                    imgMenu.classList.add("is-reduce")
                    imgMenu.classList.remove("is-not-reduce")
                    logoCircle.classList.add("appear")
                    logoCircle.classList.remove("disappear")
                }
            } else if (window.scrollY < 80) {
                imgMenu.classList.add("is-not-reduce")
                imgMenu.classList.remove("is-reduce")
                logoCircle.classList.add("disappear")
                logoCircle.classList.remove("appear")
            }
        })
    </script>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</html>
