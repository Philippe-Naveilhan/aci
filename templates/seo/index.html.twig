{% extends 'base.html.twig' %}

{% block title %}Seo index{% endblock %}

{% block body %}
    <h1>Seo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Words</th>
                <th>Sentences</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seo in seos %}
            <tr>
                <td>{{ seo.id }}</td>
                <td>{{ seo.words }}</td>
                <td>{{ seo.sentences }}</td>
                <td>
                    <a href="{{ path('seo_show', {'id': seo.id}) }}">show</a>
                    <a href="{{ path('seo_edit', {'id': seo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('seo_new') }}">Create new</a>
{% endblock %}
