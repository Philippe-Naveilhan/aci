{% extends 'base.html.twig' %}

{% block title %}Characteristic index{% endblock %}

{% block body %}
    <h1>Characteristic index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Pictogram</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for characteristic in characteristics %}
            <tr>
                <td>{{ characteristic.id }}</td>
                <td>{{ characteristic.title }}</td>
                <td>{{ characteristic.pictogram }}</td>
                <td>
                    <a href="{{ path('characteristic_show', {'id': characteristic.id}) }}">show</a>
                    <a href="{{ path('characteristic_edit', {'id': characteristic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('characteristic_new') }}">Create new</a>
{% endblock %}
