{% extends 'base.html.twig' %}

{% block title %}Contact Angelus Cosy IMMO{% endblock %}

{% block body %}

<div class="position-relative contact w-100 d-flex flex-column-reverse flex-md-row mt-5">
    {% include('update.html.twig') with {'chemin': 'admin_contact_edit'} %}
    <div class="address col-10 mt-1 mt-md-0 col-md-3 offset-md-2">
        <p>
            {{ contact.name ?? '' }}<br>
            {{ contact.address ?? '' }}<br>
            {{ contact.zipcode ?? '' }} {{ contact.city ?? '' }}
        </p>
        <p>
            {{ contact.phone ?? '' }}
        </p>
        <p><a href="mailto:{{ contact.mail ?? '' }}">{{ contact.mail ?? '' }}</a></p>
        <p>Vos interlocutrices : <br/> <b>{{ contact.staff ?? '' }}</b></p>
    </div>
    <div class="picture col-md-5 mb-md-3">
{#        {% set picture = contact.picture ?? '' %}#}
        <img src="{{ vich_uploader_asset(contact, 'pictureFile')|imagine_filter('sizeOne') }}" alt="Photo d'une cuisine avec en premier plan une plume, de l'encre de chine et un bloc de papier, et au fond un mur de brique. Ambiance moderne et chaleureuse.">
    </div>
</div>

{% endblock %}
