{{ form_start(form) }}
<div class="w-100 row mt-5">
    <div class="col-4 offset-2 text-center">
        <div class="my-3">
        {{ form_label(form.name, null, {'label': 'Nom'}) }}{{ form_errors(form.name) }}<br>
        {{ form_widget(form.name) }}
        </div>
        <div class="my-3">
            {{ form_label(form.staff, null, {'label': 'Equipe de contact'}) }}{{ form_errors(form.staff) }}<br>
            {{ form_widget(form.staff) }}
        </div>
        <div class="my-3">
            {{ form_label(form.picture, null, {'label': 'Illustration'}) }}{{ form_errors(form.picture) }}<br>
            {{ form_widget(form.picture) }}
        </div>
    </div>
    <div class="col-4 m-0 text-center">
        <div class="my-3">
            {{ form_label(form.address, null, {'label': 'Adresse'}) }}{{ form_errors(form.address) }}{{ form_errors(form.zipcode) }}{{ form_errors(form.city) }}<br>
            {{ form_widget(form.address) }}<br>
            {{ form_widget(form.zipcode) }}<br>
            {{ form_widget(form.city) }}
        </div>
        <div class="my-3">
            {{ form_label(form.phone, null, {'label': 'Téléphone'}) }}{{ form_errors(form.phone) }}<br>
            {{ form_widget(form.phone) }}
        </div>
        <div class="my-3">
            {{ form_label(form.mail, null, {'label': 'E_M@il'}) }}{{ form_errors(form.mail) }}<br>
            {{ form_widget(form.mail) }}
        </div>
    </div>
</div>
<div class="text-center">
    <button class="button my-3">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}
