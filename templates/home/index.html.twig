{% extends 'base.html.twig' %}

{% block title %}Angelus Cosy IMMO!{% endblock %}

{% block body %}
<div class="w-100">
    <section id="video-fond">
        <video playsinline="" autoplay="" muted="" loop="" poster={{ asset("build/images/video.png") }}>
            <source src="{{ asset("build/video/aci.webm") }}" type="video/webm">
{#            <source src="{{ asset("build/video/video.mp4") }}" type="video/mp4">#}
        </video>
    </section>
    <section id="philosophy" class="position-relative d-flex flex-md-row flex-column justify-content-center align-items-center">
        {% include('update.html.twig') with {'chemin': 'philosophy_edit'} %}
        <div class="img img-l">
            <img src="{{ vich_uploader_asset(philosophy, 'leftPictureFile')|imagine_filter('sizeOne') }}" alt="Portait des collaborateurs du groupe">
        </div>
        <div class="line"></div>
        <div class="text">{{ philosophy.text ? philosophy.text|raw : 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Animi architecto hic ipsum libero nam perferendis quas reprehenderit saepe totam, voluptas. Aliquam debitis dicta doloribus eveniet fuga modi similique, suscipit tenetur. Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquam aspernatur autem consequuntur cumque dolor dolore doloremque eius eligendi libero maiores non nulla quidem quis sit tempora, tempore ullam ut voluptatem?' }}</div>
        <div class="line"></div>
        <div class="img img-r">
            <img src="{{ vich_uploader_asset(philosophy, 'rightPictureFile')|imagine_filter('sizeOne') }}" alt="Portait des collaborateurs du groupe">
        </div>
    </section>
    <section id="houses" class="position-relative">
        {% for house in houses %}
        <div class="bloc-card position-relative">
            {% include('update.html.twig') with {'chemin': 'house_edit', 'id': house.id} %}
            <div class="card-house position-relative mx-auto">
                <div class="title position-absolute">{{ house.name }}</div>
                <div class="infos position-absolute">
                    {{ house.zipcode ~ ' ' ~ house.city }}
                </div>
                <div class="image position-relative mr-auto">
                    <a href="{{ path('projects', {'id': house.id}) }}">
                        <img class="w-100" src="{{ vich_uploader_asset(house, 'firstPictureFile') }}" alt="Photo du bien : {{ house.name }}.">
                    </a>
                </div>
                <div class="description">{{ house.description|length <250 ? house.description : house.description|slice(0,250)~'...' }}</div>
            </div>
            <div id="contact" class="text-center">
                <a href="{{ path('projects', {'id': house.id}) }}">
                    <button class="mb-3">En voir plus...</button>
                </a>
            </div>
        </div>
        {% endfor %}
    </section>
</div>
{% endblock %}
