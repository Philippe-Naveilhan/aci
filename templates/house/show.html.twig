{% extends 'base.html.twig' %}

{% block title %}House{% endblock %}

{% block body %}
    <h1>House</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ house.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ house.name }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ house.zipcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ house.city }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{{ house.public ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ house.description }}</td>
            </tr>
            <tr>
                <th>FirstPicture</th>
                <td>{{ house.firstPicture }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ house.updatedAt ? house.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('house_index') }}">back to list</a>

    <a href="{{ path('house_edit', {'id': house.id}) }}">edit</a>

    {{ include('house/_delete_form.html.twig') }}
{% endblock %}
