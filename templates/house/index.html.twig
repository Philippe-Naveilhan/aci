{% extends 'base.html.twig' %}

{% block title %}House index{% endblock %}

{% block body %}
    <h1>House index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Zipcode</th>
                <th>City</th>
                <th>Public</th>
                <th>Description</th>
                <th>FirstPicture</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for house in houses %}
            <tr>
                <td>{{ house.id }}</td>
                <td>{{ house.name }}</td>
                <td>{{ house.zipcode }}</td>
                <td>{{ house.city }}</td>
                <td>{{ house.public ? 'Yes' : 'No' }}</td>
                <td>{{ house.description }}</td>
                <td>{{ house.firstPicture }}</td>
                <td>{{ house.updatedAt ? house.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('house_show', {'id': house.id}) }}">show</a>
                    <a href="{{ path('house_edit', {'id': house.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('house_new') }}">Create new</a>
{% endblock %}
